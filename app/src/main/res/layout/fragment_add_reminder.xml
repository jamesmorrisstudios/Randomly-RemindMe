<com.jamesmorrisstudios.materialdesign.views.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="jamesmorrisstudios.com.randremind.fragments.AddReminderFragment">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/edit_title"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="@dimen/header_size" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Timing -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/edit_timing"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="@dimen/header_size" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Repeat -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/edit_repeat"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="@dimen/header_size" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Alert -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/edit_alert"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="@dimen/header_size" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <!-- Message -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/cardBackground"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/edit_message"
                    android:textColor="@color/primaryColorDark"
                    android:textSize="@dimen/header_size" />



            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</com.jamesmorrisstudios.materialdesign.views.ScrollView>
