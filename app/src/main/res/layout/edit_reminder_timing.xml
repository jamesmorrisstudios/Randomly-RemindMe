<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Picker for specific or range -->
    <RadioGroup
        android:id="@+id/timing_chooser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timing_specific"
            android:id="@+id/radio_specific" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timing_range"
            android:id="@+id/radio_range" />

    </RadioGroup>

    <!-- Pick Specific start time -->
    <LinearLayout
        android:id="@+id/timing_times_specific"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timing_chooser"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/timing_times_specific_per_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/alerts_per_day"
                android:textColor="@color/textDarkMain"
                android:textSize="20sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/timing_times_specific_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dropDownWidth="45dp"
                android:gravity="center_horizontal"
                android:minWidth="45dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_times"
            android:textColor="@color/textLightMain"
            android:text="@string/edit_times"
            android:layout_margin="10dp"
            android:layout_width="250dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Pick start and end times -->
    <LinearLayout
        android:id="@+id/timing_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timing_chooser"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <include
            android:id="@+id/timing_start"
            layout="@layout/time_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/dash"
            android:textColor="@color/textDarkMain"
            android:textSize="30sp" />

        <include
            android:id="@+id/timing_end"
            layout="@layout/time_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- Times per day -->
    <LinearLayout
        android:id="@+id/timing_times_per_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timing_times"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/alerts_per_day"
            android:textColor="@color/textDarkMain"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/timing_times_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="45dp"
            android:gravity="center_horizontal"
            android:minWidth="45dp" />

    </LinearLayout>

</RelativeLayout>