<RelativeLayout
    android:background="@color/cardBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColorDark"
        android:textSize="20sp"
        android:id="@+id/time_hour"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/colon"
        android:textColor="@color/primaryColorDark"
        android:textSize="20sp"
        android:id="@+id/time_colon"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/time_hour" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryColorDark"
        android:textSize="20sp"
        android:id="@+id/time_minute"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/time_colon"/>

    <LinearLayout
        android:id="@+id/time_am_pm"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/time_minute"
        android:layout_toEndOf="@+id/time_minute"
        android:orientation="vertical"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pm"
            android:textColor="@color/primaryColorDark"
            android:textSize="7sp"
            android:id="@+id/time_pm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/am"
            android:textColor="@color/primaryColorDark"
            android:textSize="7sp"
            android:id="@+id/time_am" />

    </LinearLayout>

</RelativeLayout>