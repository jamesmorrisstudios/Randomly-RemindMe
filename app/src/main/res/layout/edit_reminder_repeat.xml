<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerDark" />

    <!-- Week picker -->
    <RelativeLayout
        android:id="@+id/weeksContainer"
        android:background="@color/primaryLight"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/weeksLabel"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/weeks"
            android:textColor="@color/textDarkMain"
            android:textSize="@dimen/item_size" />

        <TextView
            android:layout_below="@+id/weeksLabel"
            android:text="@string/every_week"
            android:id="@+id/weeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textDarkSecondary"
            android:textSize="@dimen/item_small_size" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerDark" />

    <!-- Days of week -->
    <RelativeLayout
        android:id="@+id/daysContainer"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/daysLabel"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/days_of_week"
            android:textColor="@color/textDarkMain"
            android:textSize="@dimen/item_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.jamesmorrisstudios.utilitieslibrary.controls.ButtonCircleFlat
                android:id="@+id/day0"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:background="@color/iconDark"
                android:clickable="false" />

            <com.jamesmorrisstudios.utilitieslibrary.controls.ButtonCircleFlat
                android:id="@+id/day1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:background="@color/iconDark"
                android:clickable="false" />

            <com.jamesmorrisstudios.utilitieslibrary.controls.ButtonCircleFlat
                android:id="@+id/day2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:background="@color/iconDark"
                android:clickable="false" />

            <com.jamesmorrisstudios.utilitieslibrary.controls.ButtonCircleFlat
                android:id="@+id/day3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:background="@color/iconDark"
                android:clickable="false" />

            <com.jamesmorrisstudios.utilitieslibrary.controls.ButtonCircleFlat
                android:id="@+id/day4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:background="@color/iconDark"
                android:clickable="false" />

            <com.jamesmorrisstudios.utilitieslibrary.controls.ButtonCircleFlat
                android:id="@+id/day5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:background="@color/iconDark"
                android:clickable="false" />

            <com.jamesmorrisstudios.utilitieslibrary.controls.ButtonCircleFlat
                android:id="@+id/day6"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_margin="2dp"
                android:background="@color/iconDark"
                android:clickable="false" />

        </LinearLayout>


   </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/dividerDark" />

</LinearLayout>