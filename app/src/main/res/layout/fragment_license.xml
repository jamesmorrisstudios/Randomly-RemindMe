<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jamesmorrisstudios.com.randremind.fragments.LicenseFragment">

    <!-- License 0 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/license_0_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white80"
        android:textSize="@dimen/header_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:gravity="center_horizontal"
        android:text="@string/license_0_link_site"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white80"
        android:textColorLink="@color/primaryColorAccent"
        android:textSize="@dimen/item_small_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:gravity="center_horizontal"
        android:text="@string/license_0_link_license"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white80"
        android:textColorLink="@color/primaryColorAccent"
        android:textSize="@dimen/item_small_size" />

    <!-- License 1 -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="@string/license_1_title"
      android:textAppearance="?android:attr/textAppearanceLarge"
      android:textColor="@color/white80"
      android:textSize="@dimen/header_size" />

  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/white15" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:autoLink="web"
      android:gravity="center_horizontal"
      android:text="@string/license_1_link_site"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="@color/white80"
      android:textColorLink="@color/primaryColorAccent"
      android:textSize="@dimen/item_small_size" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:autoLink="web"
      android:gravity="center_horizontal"
      android:text="@string/license_1_link_license"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:textColor="@color/white80"
      android:textColorLink="@color/primaryColorAccent"
      android:textSize="@dimen/item_small_size" />

</LinearLayout>
