<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_margin="4dp"
        android:id="@+id/radio_group"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/in_order"
            android:id="@+id/radio_in_order" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/random"
            android:id="@+id/radio_random" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/message_container"
        android:layout_below="@+id/radio_group"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/num_messages"
            android:textColor="@color/textDarkMain"
            android:textSize="20sp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/message_count"
            android:saveEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="45dp"
            android:gravity="center_horizontal"
            android:minWidth="45dp" />

    </LinearLayout>

    <Button
        android:layout_below="@+id/message_container"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_edit_messages"
        android:textColor="@color/textLightMain"
        android:text="@string/edit_messages"
        android:layout_margin="10dp"
        android:layout_width="250dp"
        android:layout_height="48dp" />

</RelativeLayout>