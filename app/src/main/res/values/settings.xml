<?xml version="1.0" encoding="utf-8"?>
<resources>

    <array name="settings_base_array">
        <!-- Override to disable base settings (immersive mode option) -->
        <!-- Keep the language picker -->
        <item>@array/settings_base_item_3</item>
        <item>@array/settings_base_item_4</item>
        <item>@array/settings_base_item_5</item>
    </array>

    <!-- Override to define your settings -->
    <array name="settings_array">
        <item>@array/settings_item_0</item>
        <item>@array/settings_item_1</item>
        <item>@array/settings_item_2</item>
        <item>@array/settings_item_3</item>
        <item>@array/settings_item_4</item>
    </array>

    <!-- Notification click opens app  -->
    <array name="settings_item_0">
        <item name="defaultValue">@bool/settings_item_0_default_value</item>
        <item name="key">@string/settings_item_0_key</item>
        <item name="primary">@string/randremind_settings_0_primary</item>
        <item name="secondary">@string/randremind_settings_0_secondary</item>
        <item name="restart">@bool/settings_item_0_restart</item>
    </array>

    <bool name="settings_item_0_restart">false</bool>
    <bool name="settings_item_0_default_value">true</bool>
    <string name="settings_item_0_key" translatable="false">@string/pref_notification_click_ack</string>
    <string name="pref_notification_click_ack" translatable="false">NOTIFICATION_CLICK_ACK</string>

    <!-- Enable to use system notification -->
    <array name="settings_item_1">
        <item name="defaultValue">@bool/settings_item_1_default_value</item>
        <item name="key">@string/settings_item_1_key</item>
        <item name="primary">@string/randremind_settings_1_primary</item>
        <item name="secondary">@string/randremind_settings_1_secondary</item>
        <item name="restart">@bool/settings_item_1_restart</item>
    </array>

    <bool name="settings_item_1_restart">false</bool>
    <bool name="settings_item_1_default_value">true</bool>
    <string name="settings_item_1_key" translatable="false">@string/pref_notification_custom</string>
    <string name="pref_notification_custom" translatable="false">NOTIFICATION_CUSTOM</string>

    <!-- Enable to make notification ongoing -->
    <array name="settings_item_2">
        <item name="defaultValue">@bool/settings_item_2_default_value</item>
        <item name="key">@string/settings_item_2_key</item>
        <item name="primary">@string/randremind_settings_2_primary</item>
        <item name="secondary">@string/randremind_settings_2_secondary</item>
        <item name="restart">@bool/settings_item_2_restart</item>
    </array>

    <bool name="settings_item_2_restart">false</bool>
    <bool name="settings_item_2_default_value">false</bool>
    <string name="settings_item_2_key" translatable="false">@string/pref_notification_ongoing</string>
    <string name="pref_notification_ongoing" translatable="false">NOTIFICATION_ONGOING</string>

    <!-- Enable to make notifications light theme -->
    <array name="settings_item_3">
        <item name="defaultValue">@bool/settings_item_3_default_value</item>
        <item name="key">@string/settings_item_3_key</item>
        <item name="primary">@string/randremind_settings_3_primary</item>
        <item name="secondary">@string/randremind_settings_3_secondary</item>
        <item name="restart">@bool/settings_item_3_restart</item>
    </array>

    <bool name="settings_item_3_restart">false</bool>
    <bool name="settings_item_3_default_value">true</bool>
    <string name="settings_item_3_key" translatable="false">@string/pref_notification_theme</string>
    <string name="pref_notification_theme" translatable="false">NOTIFICATION_THEME</string>

    <!-- Set the first day of the week -->
    <array name="settings_item_4">
        <item name="defaultValue">@integer/settings_item_4_default_value</item>
        <item name="key">@string/settings_item_4_key</item>
        <item name="primary">@string/randremind_settings_4_primary</item>
        <item name="secondary">@string/BLANK</item>
        <item name="restart">@bool/settings_item_4_restart</item>
        <item name="list">@array/settings_item_4_list</item>
    </array>

    <bool name="settings_item_4_restart">false</bool>
    <integer name="settings_item_4_default_value">0</integer>
    <string name="settings_item_4_key" translatable="false">@string/pref_notification_first_day</string>
    <string name="pref_notification_first_day" translatable="false">NOTIFICATION_FIRST_DAY</string>

    <string-array name="settings_item_4_list">
        <item name="automatic">@string/automatic</item>
        <item name="sunday">@string/day_sunday</item>
        <item name="monday">@string/day_monday</item>
        <item name="tuesday">@string/day_tuesday</item>
        <item name="wednesday">@string/day_wednesday</item>
        <item name="thursday">@string/day_thursday</item>
        <item name="friday">@string/day_friday</item>
        <item name="saturday">@string/day_saturday</item>
    </string-array>

</resources>