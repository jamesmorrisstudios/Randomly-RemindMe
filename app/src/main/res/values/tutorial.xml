    <array name="help_tutorial_item_0">
        <item name="header">@string/help_tutorial_0_header</item>
        <item name="text">@string/help_tutorial_0</item>
    </array>
    <string name="help_tutorial_0_header">Add Reminder</string>
    <string name="help_tutorial_0">To add a new reminder simply press the + action button on the main page</string>

    <array name="help_tutorial_item_1">
        <item name="header">@string/help_tutorial_1_header</item>
        <item name="text">@string/help_tutorial_1</item>
    </array>
    <string name="help_tutorial_1_header">Title &amp; Content</string>
    <string name="help_tutorial_1">The reminder title will show on the main page and on the top of notifications.
        The content will show in the body of the notification. You may have to expand the notification to view all of it.</string>

    <array name="help_tutorial_item_2">
        <item name="header">@string/help_tutorial_2_header</item>
        <item name="text">@string/help_tutorial_2</item>
    </array>
    <string name="help_tutorial_2_header">Timing</string>
    <string name="help_tutorial_2">Choose Specific for a single reminder at a certain time in the day. Choose Range for one or more reminders throughout the day.
    Touch the times to set a new time for that position.
    Next choose how many reminders you want during your time interval.
    Finally choose if you want the times randomized or at an even interval.</string>

    <array name="help_tutorial_item_3">
        <item name="header">@string/help_tutorial_3_header</item>
        <item name="text">@string/help_tutorial_3</item>
    </array>
    <string name="help_tutorial_3_header">Repeat</string>
    <string name="help_tutorial_3">Highlight the days of the week that you want this reminder to work.</string>

    <array name="help_tutorial_item_4">
        <item name="header">@string/help_tutorial_4_header</item>
        <item name="text">@string/help_tutorial_4</item>
    </array>
    <string name="help_tutorial_4_header">Notification</string>
    <string name="help_tutorial_4">Customize the notification with a custom tone, vibrate, priority, and LED color.
        High priority only works if either or both vibrate and a tone are enabled (depending on device).</string>

    <array name="help_tutorial_item_5">
        <item name="header">@string/help_tutorial_5_header</item>
        <item name="text">@string/help_tutorial_5</item>
    </array>
    <string name="help_tutorial_5_header">Reminder Summary</string>
    <string name="help_tutorial_5">The number of notifications shown and clicked are logged and shown on the summary page.
    The statistics are available on a per day basis for the last 30 days and a lifetime count is shown.</string>

    <array name="help_tutorial_item_6">
        <item name="header">@string/help_tutorial_6_header</item>
        <item name="text">@string/help_tutorial_6</item>
    </array>
    <string name="help_tutorial_6_header">The Notification</string>
    <string name="help_tutorial_6">For reminders that require action use notification button Acknowledge if you completed it and dismiss if you did not.
    Swiping away the reminder counts as a dismiss and clicking it counts as Acknowledging it.
    Using the notification action buttons will not open the app. If you want clicking the notification to have this behavior change the option in settings.</string>

